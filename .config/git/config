[core]
	editor = nvim
	fileMode = false
	excludesfile = ~/.config/git/git-templates/gitignore_global
	pager = bat --plain
[merge]
	tool = meld
[mergetool "meld"]
	path = /usr/bin/meld
[commit]
	template = ~/.config/git/git-templates/git_commit_msg.txt
[alias]
	i = init
	cl = clone
	st = status -sb --show-stash
	d = diff
	ds = diff --staged
	pl = up
	up = "!git remote update -p; git merge --ff-only @{u}"
	ps = push
	psh = push --set-upstream origin HEAD
	psf = push --force-with-lease
	f = fetch
	l = log
	ll = log -1
	a = add
	c = commit --verbose
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpa = cherry-pick --abort
	br = branch
	co = checkout
	sh = stash
	shl = stash list
	sha = stash apply
	shp = stash pop
	re = rebase
	rei = rebase --interactive
	rec = rebase --continue
	rea = rebase --abort
	unstage = reset HEAD
	af = add --force
[push]
	default = current
[includeIf "gitdir:~/data/git/"]
	path = ~/.config/git/git-configs/work
[includeIf "gitdir:~/data/go/"]
	path = ~/.config/git/git-configs/work
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
