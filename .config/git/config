[init]
	templatedir = ~/.config/git/templates
	defaultBranch = master
[user]
	name = Tung Beier
	email = beiertu@mediamarktsaturn.com
[core]
	editor = nvim
	fileMode = false
	excludesfile = ~/.config/git/gitignore_global
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true # use n and N to move between diff sections
	light = false   # set to true if using a light background
	line-numbers = true
[diff]
	colorMoved = default
[commit]
	template = ~/.config/git/templates/commit_msg.txt
[alias]
	i = init
	st = status -sb --show-stash
	d = diff
	ds = diff --staged
	pl = up
	up = "!git remote update -p; git merge --ff-only @{u}"
	ps = push
	psh = push --set-upstream origin HEAD
	psf = push --force-with-lease
	f = fetch
	l = log
	ll = log -1
	lp = log --pretty="%Cblue%h %Creset%s%C(auto)%d %C(dim white)[%ar]%Creset"
	a = add
	c = commit --verbose
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpa = cherry-pick --abort
	br = branch
	co = checkout
	sh = stash
	shl = stash list
	sha = stash apply
	shp = stash pop
	re = rebase
	rei = rebase --interactive --autostash
	rec = rebase --continue
	rea = rebase --abort
	unstage = reset HEAD
	af = add --force
	reauto = "!git merge-base HEAD ${1:-master} | xargs git rebase --interactive --autostash --autosquash"
[push]
	default = current
	autoSetupRemote = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autocorrect = 30
