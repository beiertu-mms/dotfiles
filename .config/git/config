[init]
	templatedir = ~/.config/git/git-templates
[user]
	name = Tung Beier
	email = beiertu@mediamarktsaturn.com
[core]
	editor = nvim
	fileMode = false
	excludesfile = ~/.config/git/git-templates/gitignore_global
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true	# use n and N to move between diff sections
	light = false		# set to true if using a light background
	line-numbers = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[commit]
	template = ~/.config/git/git-templates/git_commit_msg.txt
[alias]
	i = init
	st = status -sb --show-stash
	d = diff
	ds = diff --staged
	pl = up
	up = "!git remote update -p; git merge --ff-only @{u}"
	ps = push
	psh = push --set-upstream origin HEAD
	psf = push --force-with-lease
	f = fetch
	l = log
	ll = log -1
	a = add
	c = commit --verbose
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpa = cherry-pick --abort
	br = branch
	co = checkout
	sh = stash
	shl = stash list
	sha = stash apply
	shp = stash pop
	re = rebase
	rei = rebase --interactive
	rec = rebase --continue
	rea = rebase --abort
	unstage = reset HEAD
	af = add --force
	# gen-ignore <lang>: Outputs a .gitignore file for `lang` from gitignore.io to stdout.
	gen-ignore = "!_gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; _gi"
	## sq [base_branch]: Starts an interactive rebase from the base of the branch relative to `base_branch`
	##                   (defaults to `master`; can be any ref) without applying changes on top of `base_branch`.
	sq = "!_sq() { git rebase --interactive --autosquash $(git merge-base HEAD ${1:-master}); }; _sq"
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
